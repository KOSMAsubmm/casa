
Bootstrap: docker
From: ubuntu:22.04

%environment
    export LC_ALL=C

%post
    # Setting up the environment variable for non-interactive mode
    export DEBIAN_FRONTEND=noninteractive

    # Create user and group
    mkdir /home/casa

    # Install necessary tools and libraries
    apt update
    apt install -y wget xz-utils fuse xserver-xorg-dev sqlite libxext-dev libx11-6 libfontconfig1 libsm-dev xserver-xorg libgtk-3-dev libfuse2
    rm -rf /var/lib/apt/lists/*

    # Download and extract casa-pipeline software (assuming it's available at the build location)
    tar -xvf casa-6.4.1-12-pipeline-2022.2.0.64-py3.6.tar.xz
    rm casa-6.4.1-12-pipeline-2022.2.0.64-py3.6.tar.xz

%runscript
    exec modprobe -v fuse &&  /casa-6.4.1-12-pipeline-2022.2.0.64/bin/casa "$@"

%files
    casa-6.4.1-12-pipeline-2022.2.0.64-py3.6.tar.xz /casa-6.4.1-12-pipeline-2022.2.0.64-py3.6.tar.xz
